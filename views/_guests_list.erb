<ul class="wide_list" id="guests">
  <% @guests.each do |guest| %>
	<li id="<%= guest.id %>"<%= ' class="checked_in"' if guest.checked_in? %>>
		<div class="content"><%= guest.last_name + ", " + guest.first_name %>
    <% guest.type.tap do |type| %>
    	<% if type != '' %>
      <span class="badge <%= guest_type_element(type, 'class') %>"><%= guest_type_element(type, 'abbr') %></span>
      <% end %>
    <% end %>
		</div><!-- end content -->
		<div class="drawer">
			<span class="button first details">Details</span>
			<% if guest.checked_in? %>
			<span class="button checkin checked_in">Checked In</span>
			<% else %>
			<span class="button checkin">Check In</span>			
			<% end %>
			<div class="details_box">
				<p>
					<% if guest.group && guest.group != '' %>
					<span class="guest_group" id="<%= escape_special(guest.group) %>"><%= guest.group %></span><br>
					<% end %>
					<%= guest.email %>
				</p>			
		</div>
		</div>
	</li>
  <% end %>
</ul>